{
  "name": "Zen Tab",
  "description": "The tab management tool for Chrome",
  "version": "0.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "alarms",
    "management",
    "idle"
  ]
}
