{
  "name": "zen-tab",
  "version": "0.0.0",
  "description": "The tab management tool for Chrome",
  "author": "softoika <zwgntz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && TAILWIND_MODE=build NODE_ENV=production webpack",
    "build:dev": "yarn clean && TAILWIND_MODE=build NODE_ENV=development webpack",
    "build:watch": "yarn clean && TAILWIND_MODE=watch NODE_ENV=development webpack --watch",
    "test": "jest",
    "test:debug": "jest --silent false",
    "lint": "eslint src/ && prettier --check src/",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.9",
    "autoprefixer": "10.4.20",
    "dayjs": "1.11.13",
    "postcss": "8.4.49",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "3.4.17"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "7.0.2",
    "@types/chrome": "0.0.287",
    "@types/jest": "27.5.2",
    "@types/react": "17.0.83",
    "@types/react-dom": "17.0.26",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "copy-webpack-plugin": "10.2.4",
    "css-loader": "6.11.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "jest": "27.5.1",
    "jest-chrome": "0.8.0",
    "postcss-loader": "6.2.1",
    "prettier": "2.8.8",
    "react-test-renderer": "17.0.2",
    "style-loader": "3.3.4",
    "terser-webpack-plugin": "5.3.11",
    "ts-jest": "27.1.5",
    "ts-loader": "9.5.1",
    "tsconfig-paths-webpack-plugin": "3.5.2",
    "typescript": "5.7.3",
    "webextension-polyfill": "0.8.0",
    "webextension-polyfill-ts": "0.26.0",
    "webpack": "5.97.1",
    "webpack-cli": "4.10.0"
  }
}
