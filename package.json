{
  "name": "zen-tab",
  "version": "0.0.0",
  "description": "The tab management tool for Chrome",
  "author": "softoika <zwgntz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && TAILWIND_MODE=build NODE_ENV=production webpack",
    "build:dev": "yarn clean && TAILWIND_MODE=build NODE_ENV=development webpack",
    "build:watch": "yarn clean && TAILWIND_MODE=watch NODE_ENV=development webpack --watch",
    "test": "jest",
    "test:debug": "jest --silent false",
    "lint": "eslint src/ && prettier --check src/",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.5.0",
    "autoprefixer": "10.4.4",
    "dayjs": "1.11.0",
    "postcss": "8.4.12",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "3.0.23"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "7.0.2",
    "@types/chrome": "0.0.180",
    "@types/jest": "27.4.1",
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.15",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "copy-webpack-plugin": "10.2.4",
    "css-loader": "6.7.1",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.4.0",
    "jest": "27.5.1",
    "jest-chrome": "0.7.2",
    "postcss-loader": "6.2.1",
    "prettier": "2.6.2",
    "react-test-renderer": "17.0.2",
    "style-loader": "3.3.1",
    "terser-webpack-plugin": "5.3.1",
    "ts-jest": "27.1.4",
    "ts-loader": "9.2.8",
    "tsconfig-paths-webpack-plugin": "3.5.2",
    "typescript": "4.6.3",
    "webextension-polyfill": "0.8.0",
    "webextension-polyfill-ts": "0.26.0",
    "webpack": "5.72.0",
    "webpack-cli": "4.9.2"
  }
}
