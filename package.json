{
  "name": "zen-tab",
  "version": "0.0.0",
  "description": "The tab management tool for Chrome",
  "author": "softoika <zwgntz@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && TAILWIND_MODE=build NODE_ENV=production webpack",
    "build:dev": "yarn clean && TAILWIND_MODE=build NODE_ENV=development webpack",
    "build:watch": "yarn clean && TAILWIND_MODE=watch NODE_ENV=development webpack --watch",
    "test": "jest",
    "test:debug": "jest --silent false",
    "lint": "eslint src/ && prettier --check src/",
    "format": "prettier --write src/",
    "clean": "rm -rf dist/"
  },
  "dependencies": {
    "@tailwindcss/forms": "0.3.4",
    "autoprefixer": "10.3.7",
    "dayjs": "1.10.7",
    "postcss": "8.3.11",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "tailwindcss": "2.2.17"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "7.0.2",
    "@types/chrome": "0.0.159",
    "@types/jest": "27.0.2",
    "@types/react": "17.0.31",
    "@types/react-dom": "17.0.10",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "copy-webpack-plugin": "9.0.1",
    "css-loader": "6.4.0",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.26.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "jest": "27.3.1",
    "jest-chrome": "0.7.2",
    "postcss-loader": "6.2.0",
    "prettier": "2.4.1",
    "react-test-renderer": "17.0.2",
    "style-loader": "3.3.1",
    "terser-webpack-plugin": "5.2.4",
    "ts-jest": "27.0.7",
    "ts-loader": "9.2.6",
    "tsconfig-paths-webpack-plugin": "3.5.1",
    "typescript": "4.4.4",
    "webextension-polyfill": "0.8.0",
    "webextension-polyfill-ts": "0.26.0",
    "webpack": "5.59.1",
    "webpack-cli": "4.9.1"
  }
}
