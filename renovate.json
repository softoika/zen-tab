{
  "extends": ["config:base"],
  "timezone": "Asia/Tokyo",
  "schedule": ["before 8am on saturday"],
  "groupName": "all",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "groupName": "webextension-polyfill",
      "matchPackageNames": [
        "webextension-polyfill-ts",
        "webextension-polyfill"
      ],
      "automerge": false
    },
    {
      "groupName": "typescript",
      "matchPackageNames": ["typescript"],
      "automerge": false,
      "patch": {
        "automerge": true
      }
    }
  ]
}
